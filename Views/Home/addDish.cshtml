@{
ViewData["Title"] = "Add Dish Page";

}

@model Dishes

<div class="row text-center">
    <h1>Add a new Dish!</h1>
</div class="row">

<form asp-action="AddDish" asp-controller="Home" method="Post">
    <div class="form-group row">
        <label class="col-sm-4">Name:</label>
        <input asp-for="Name">
    </div>
    <div class="form-group row">
        <label class="col-sm-4">Chef:</label>
        <input asp-for="Chef">
    </div>
    <div class="form-group row">
        <label class="col-sm-4">Tastiness:</label>
        <input asp-for="Tastiness">
    </div>
    <div class="form-group row">
        <label class="col-sm-4">Calories:</label>
        <input asp-for="Calories">
    </div>
    <div class="form-group row">
        <label class="col-sm-4">Description:</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <button>Add</button>
</form>